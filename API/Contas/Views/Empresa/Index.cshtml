@model IEnumerable<Contas.Domain.Models.Empresa>


@{
    ViewData["Title"] = "Empresas";

    string msg = (string)TempData["Message.Text"];
    bool error = TempData["Message.Error"] == null ? false : (bool)TempData["Message.Error"];
}

<div class="container">
    <div class="row">
        <h1>Lista de Empresas</h1>
    </div>

    <div class="row my-3 pr-3">
        <a asp-action="Create" class="btn btn-primary">Novo</a>
    </div>

    @if (msg != null)
    {
        @if (error)
        {
            <div class="row">
                <div class="col-3"></div>
                <div class="col-6">
                    <div class="alert alert-danger" role="alert">
                        @msg
                    </div>
                </div>
                <div class="col-3"></div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-3"></div>
                <div class="col-6">
                    <div class="alert alert-success" role="alert">
                        @msg
                    </div>
                </div>
                <div class="col-3"></div>
            </div>
        }
    }

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Site)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.QuantidadeFuncionarios)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Site)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.QuantidadeFuncionarios)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info mr-2">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info mr-2">Detalhes</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Apagar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>